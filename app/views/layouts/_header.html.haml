%header.centered-navigation{role: 'banner'}
  .centered-navigation-wrapper
    %a{href: '#', class: 'mobile-logo'}
      %img{src: "https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/placeholder_logo_3_dark.png" }
    %a{id: 'js-centered-navigation-mobile-menu', class: 'centered-navigation-mobile-menu', href: '#'} MENU
    %nav{role: 'navigation'}
      %ul{id: 'js-centered-navigation-menu', class: 'centered-navigation-menu'}
        %li.nav-link
          %a{href:'#'} Products
        %li.nav-link
          %a{href:'#'} About Us
        %li.nav-link
          = link_to 'Home', root_path
        %li.nav-link
          = link_to 'My Pups', pups_path
        %li.nav-link.logo
          %a{href:'#', class: 'logo'}
            %img{src: 'https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/placeholder_logo_3_dark.png'}
        %li.nav-link.more
          %a{href:'#'} More
          %ul.submenu
            %li
              %a{href:'#'} Submenu Item
            %li
              %a{href:'#'} Another Item
            %li.more
              %a{href:'#'} Item with submenu
              %ul.submenu
                %li
                  %a{href:'#'} Sub-submenu Item
                %li
                  %a{href:'#'} Another Item
              %li.more
                %a{href:'#'} Another submenu
                %ul.submenu
                  %li
                    %a{href:'#'} Sub-submenu
                  %li
                    %a{href:'#'} An Item
        - if !user_signed_in?
          %li.nav-link
            = link_to 'Sign up', new_user_registration_path
          %li.nav-link
            = link_to 'Sign in', new_user_session_path
        - else
          %li.nav-link
            = link_to 'Sign out', destroy_user_session_path, method: :delete
          %li.nav-link
            = link_to 'Account', edit_user_registration_path
          %li.nav-link
            %a{href: '#'} Hi, #{current_user.name}!
